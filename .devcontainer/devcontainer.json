{
  "name": "Lock.Boot Dev",
  "image": "lockboot:dev",
  "mounts": [
    "source=${localWorkspaceFolder},target=/src,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "workspaceFolder": "/src",
  "runArgs": [
    "--network=host",
    "--user", "1000:1000",
    "--group-add", "134",
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates"
      ],
      "settings": {
        "telemetry.telemetryLevel": "off"
      }
    }
  },
  "remoteUser": "1000"
}